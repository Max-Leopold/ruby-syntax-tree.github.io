#!/usr/bin/env node

const esbuild = require("esbuild");
const path = require("path");

const wasmPlugin = require("./wasmPlugin");

esbuild.build({
  bundle: true,
  entryPoints: [path.join(__dirname, "../src/index.ts")],
  format: "esm",
  minify: true,
  outdir: path.join(__dirname, "../docs"),
  plugins: [wasmPlugin],
  sourcemap: true,
  splitting: true,
  target: "es6"
});
